<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".home.view.MainActivity">

    <!-- Color Picker Partition on the Left -->

    <!-- Animation Partition on the Right (TextView) -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/composeColorPicker"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/animationTextView"
        app:layout_constraintEnd_toStartOf="@+id/animationTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/animationTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Animation Partition"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/rv_favorite_colors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/composeColorPicker"
        app:layout_constraintTop_toBottomOf="@+id/composeColorPicker" />

    <!-- Horizontal RecyclerView at the Bottom -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_favorite_colors"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animationTextView" />

